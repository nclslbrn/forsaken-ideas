{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug sketch",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost:8080/",
            "pathMappings": [
                {
                    "url": "webpack:///${fileBasenameNoExtension}",
                    "path": "src/sketch/${workspaceFolder}/${fileBasenameNoExtension}"
                },
                {
                    "url": "http://localhost",
                    "path": "${workspaceFolder}"
                }
            ]
        }
    ]
}
