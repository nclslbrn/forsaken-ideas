{
  "name": "make-v2.1",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "gallery:dev": "vite",
    "gallery:build": "run-p gallery:type-check gallery:build-only",
    "gallery:preview": "vite preview",
    "gallery:build-only": "vite build",
    "gallery:type-check": "vue-tsc --noEmit -p tsconfig.app.json --composite false",
    "gallery:lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "gallery:format": "prettier --write src/",
    "sketch:list": "node tasks/concat-sketch-properties.mjs",
    "sketch:publish": "cp -r ./public/sketch ./dist/ && cp ./sketch/color.css ./dist/sketch && ./sketch/project.css ./dist/sketch",
    "argument": "echo \"The value of --sketch is '${npm_config_sketch}'\"",
    "sketch:setup": "node tasks/setup-vite-for-sketch.mjs sketch/${npm_config_sketch}",
    "sketch:dev": "vite sketch/${npm_config_sketch}",
    "sketch:build": "vite build sketch/${npm_config_sketch}",
    "sketch:buildAll": "node tasks/build-all-sketches.mjs",
    "sketch:lint": "eslint sketch/${npm_config_sketch}/*.js --fix",
    "sketch:format": "prettier --write ${npm_config_sketch}/"
  },
  "dependencies": {
    "@thi.ng/dl-asset": "^2.3.42",
    "@thi.ng/geom": "^5.2.3",
    "@thi.ng/hiccup-canvas": "^2.3.21",
    "@thi.ng/random": "^3.6.4",
    "@thi.ng/timestep": "^0.4.14",
    "@thi.ng/transducers": "^8.7.0",
    "@yeger/vue-masonry-wall": "^5.0.2",
    "p5": "^1.7.0",
    "simplex-noise": "^4.0.1",
    "three": "^0.156.1",
    "vite-plugin-cdn2": "^0.12.4",
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.22.15",
    "@inquirer/prompts": "^3.1.1",
    "@rushstack/eslint-patch": "^1.3.2",
    "@tsconfig/node18": "^18.2.0",
    "@types/node": "^18.17.5",
    "@vitejs/plugin-vue": "^4.3.1",
    "@vitejs/plugin-vue-jsx": "^3.0.2",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/tsconfig": "^0.4.0",
    "child_process": "^1.0.2",
    "chromotome": "^1.21.4",
    "eslint": "^8.46.0",
    "eslint-plugin-vue": "^9.16.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "typescript": "~5.1.6",
    "vite": "^4.4.9",
    "vite-plugin-external": "^4.0.1",
    "vite-plugin-html": "^3.2.0",
    "vite-plugin-static-copy": "^0.17.0",
    "vue-tsc": "^1.8.8"
  }
