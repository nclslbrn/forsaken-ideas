mixin iconav(property)
    nav#iconav
        ul
            li
                a(href="../../" title="HOME") 
                    span.screen-reader-text Back
                    svg.icon.icon-home
                        use(xlink:href="#icon-home")
                        
            li
                a(href="#" data-action="openOffFrame" title="INFO")
                    span.screen-reader-text Info
                    svg.icon.icon-info
                        use(xlink:href="#icon-info")

           
            

            if property.action != null
                each action in property.action
                    if action.name != null
                        li
                            a(href="#" data-action=action.name title=action.name.replace('_', ' ').toUpperCase())
                                span.screen-reader-text #{action.name.toUpperCase()}
                                svg.icon.icon-cog
                                    if action.icon != null
                                        use(xlink:href="#icon-"+ action.icon)
                                    else
                                        use(xlink:href="#icon-settings")