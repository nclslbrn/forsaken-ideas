mixin infobox(title, property)
    #infobox
        div
            a(href="#" data-action="infobox")
                svg.close.icon.icon-cross
                    use(xlink:href="#icon-cross")

            h1 #{title}
            small 
                svg.icon.icon-calendar
                    use(xlink:href="#icon-calendar")
                span #{property.date}
                
            p !{property.info}